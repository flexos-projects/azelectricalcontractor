---
interface Props {
  title: string;
  image: string;
}

const { title, image } = Astro.props;
---

<div class="bg-[#FFFFFF] rounded-lg shadow-md overflow-hidden font-['Open_Sans']">
  <img
    src={image}
    alt={title}
    class="w-full h-48 object-cover"
  />
  <div class="p-6">
    <h2 class="font-['Montserrat'] text-xl font-semibold text-[#000000]">
      {title}
    </h2>
  </div>
</div>